MY_MENU MENU
BEGIN
  POPUP "File"    //0
  BEGIN
    MENUITEM "New session"                ,IDM_NEW_SESSION
    MENUITEM SEPARATOR
    MENUITEM "Delete current session"     ,IDM_DEL_SESSION
    MENUITEM "Delete all sessions"        ,IDM_DEL_ALL_SESSION
    MENUITEM SEPARATOR
    MENUITEM "Merge to database"          ,IDM_LOAD_SESSION_FILE
    MENUITEM "Save database"              ,IDM_SAVE_SESSION_FILE
    MENUITEM SEPARATOR
    POPUP    "Save all results"
    BEGIN
      MENUITEM "*.csv\tCtrl+s"            ,POPUP_E_CSV
      MENUITEM "*.html"                   ,POPUP_E_HTML
      MENUITEM "*.xml"                    ,POPUP_E_XML
    END
  END
  POPUP "Settings"  //1
  BEGIN
    MENUITEM "Stay on top\tAlt+t"         ,IDM_STAY_ON_TOP
   /* MENUITEM SEPARATOR
    MENUITEM "Check all tests\tAlt+c"     ,IDM_CHECK_ALL_TESTS
    MENUITEM "Uncheck all tests\tAlt+u"   ,IDM_UNCHECK_ALL_TESTS*/
  END
  POPUP "Tools"     //2
  BEGIN
    /*MENUITEM "Copy local registry files"  ,IDM_TOOLS_CP_REGISTRY
    MENUITEM "Copy local audit files"     ,IDM_TOOLS_CP_AUDIT
    MENUITEM "Copy NTDIS.DIT AD file"     ,IDM_TOOLS_CP_AD
    MENUITEM "Copy hybernate file"        ,IDM_TOOLS_CP_HIBERNATE
    MENUITEM SEPARATOR
    MENUITEM "Copy select file"           ,IDM_TOOLS_CP_SELECT*/
  END
  POPUP "Help"      //3
  BEGIN
    MENUITEM "Open RtCA home\tAlt+h"     ,IDM_RTCA_HOME
    MENUITEM SEPARATOR
    MENUITEM "About\tF1"                 ,IDM_ABOUT
  END
END
